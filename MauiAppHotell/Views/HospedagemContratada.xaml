<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotell.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="Aqua"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <Grid ColumnDefinitions="Auto,Auto"
                  HorizontalOptions="Center">
                <Label Grid.Column="0" Text="Adultos: " />
                <Label Grid.Column="1" Text="{Binding QntAdultos}" TextColor="Aqua" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="Auto,Auto"
                  HorizontalOptions="Center">
                <Label Grid.Column="0" Text="CrianÃ§as: " />
                <Label Grid.Column="1" Text="{Binding QntCriancas}" TextColor="Aqua" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="Aqua" />

                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}" 
                       TextColor="Aqua" />

                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia}"
                       TextColor="Aqua" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="Auto,Auto"
                  HorizontalOptions="Center">
                <Label Grid.Column="0" Text="Valor Total: " />
                <Label Grid.Column="1" Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" TextColor="Aqua" />
            </Grid>
        </Frame>

        <Button Text="Voltar"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>