<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotell.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray300}">
    <Grid RowDefinitions="Auto,Auto"
          ColumnDefinitions="*">
        <Grid Grid.Row="0">
            <Label 
                Margin="20"
                Text="Cálculo da Diária"
                FontFamily="BorelRegular" 
                FontSize="30"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Grid>
        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos: " />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                <Frame Padding="10" Margin="10">
                    <Label Text="Escolha sua Suíte" 
                           TextTransform="Uppercase"
                           FontSize="Subtitle"
                           TextColor="{StaticResource Primary}" />

                    <Picker x:Name="pck_quarto"
                            Title="Selecione sua Acomodação" 
                            ItemDisplayBinding="{Binding Descricao}" />
                </Frame>

                <Frame Padding="10"
                       Margin="10">
                    <VerticalStackLayout Spacing="10">

                        <Label Text="Período de Estadia"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               FontFamily="Borel-Regular"
                               TextColor="{StaticResource Primary}"/>

                            <Grid ColumnDefinitions="Auto,Auto" HorizontalOptions="Center">
                                <Label Grid.Column="0" Text="Check-in: " />
                                <DatePicker Grid.Column="1" x:Name="dtpck_checkin"
                                            DateSelected="dtpck_checkin_DateSelected"
                                            Format="dd/MM/yyyy" />
                            </Grid>

                            <Grid ColumnDefinitions="Auto,Auto" HorizontalOptions="Center">
                                <Label Grid.Column="0" Text="Check-out: " />
                                <DatePicker Grid.Column="1" x:Name="dtpck_checkout"
                                            Format="dd/MM/yyyy" />
                            </Grid>
                    </VerticalStackLayout>
                </Frame>
                <Button Text="Avançar" Clicked="Button_Clicked"
                        FontFamily="BorelRegular" 
                        FontSize="10"/>
                
                <Button Text="SOBRE" Clicked="Sobre_Clicked"
                        Margin="5"
                        FontFamily="BorelRegular" 
                        FontSize="10"/>
                

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>