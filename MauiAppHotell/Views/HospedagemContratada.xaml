<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotell.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label x:Name="{Binding Quartos.Descricao}" 

        TextColor="{StaticResource Primary}" 
               FontFamily="Borel-Regular"
               FontSize="20"
               HorizontalOptions="Center"
 
               />
        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                   <Label Text="{Binding Adultos}" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="CrianÃ§as: "/>
                    <Label Text="1" TextColor="{StaticResource Primary}"/>

                </HorizontalStackLayout>
                
            </HorizontalStackLayout>
           
        </Frame>
        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"/>

                <Label Grid.Row="1" Grid.Column="0" Text="{Binding dtpck_checkin}"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding dtpck_checkout}"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>

            </Grid>
            
        </Frame>
        <Frame>
            <HorizontalStackLayout>
                
            <Label Text="Valor Total:" />
                <Label Text="{Binding Total}" />
                
            </HorizontalStackLayout>
             </Frame>
        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />
        
        
    </VerticalStackLayout>
</ContentPage>